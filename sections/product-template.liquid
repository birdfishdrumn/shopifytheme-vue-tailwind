{% assign current_product = product.selected_or_first_availble_variant %}
{% assign product_image = current_product.featured_image | default: product.featured_image  %}

<div class="container">
  <div class="row">
    <div class="col-md-6 col-12 mt-4">
      <img class="" src="{{ product_image | img_url: 'large' }}" alt="{{ product_image.alt }}" id="ProductMainImage" >
      {% for image in product.images %}
        <img src="{{ image.src | img_url: 'medium' }}" alt="{{ image.alt}}">
      {% endfor %}
    </div>
    <div class="col-md-6 col-12 mt-4">
    <h1>{{ product.title}}</h1>
    {% comment %} {{current_product}} {% endcomment %}
    <p>{{ product.price  | money }}</p>




    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product pages",
    "settings":[
      {
          "type": "checkbox",
          "id": "dynamic_buttons_checkbox",
          "label": "Enable Dynamic Buttons",
          "default": false
        }
    ]
  }
{% endschema %}
